<?xml version="1.0" encoding="UTF-8"?>

<?import dev.coding_challenge_souffleur.view.FormattedTextFlow?>
<?import dev.coding_challenge_souffleur.view.keylistener.ShortcutKeysLabel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
  minWidth="600" styleClass="main-container"
  stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21"
  fx:controller="dev.coding_challenge_souffleur.view.ViewController"
  fx:id="mainContainer">
  <HBox visible="false" fx:id="screenshotPreviewContainer">
    <Region HBox.hgrow="ALWAYS"/>
    <StackPane styleClass="screenshot-preview">
      <ImageView fitHeight="150" preserveRatio="true" fx:id="screenshotPreview"/>
    </StackPane>
  </HBox>
  <HBox styleClass="header-box" fx:id="headerBox">
    <Label minWidth="130" styleClass="header-label" text="Shortcut Modifier"
      fx:id="shortcutModifierText"/>
    <ShortcutKeysLabel styleClass="header-label"/>
    <Region HBox.hgrow="ALWAYS"/>
    <Button onAction="#exit" styleClass="close-button" text="❌" fx:id="closeButton"/>
  </HBox>
  <ScrollPane managed="false" styleClass="content-pane" visible="false" fx:id="contentPane">
    <Label styleClass="status-label" text="Analyzing..." fx:id="statusLabel"/>
    <VBox>
      <FormattedTextFlow styleClass="text-content" fx:id="solutionDescriptionFlow"/>
      <VBox styleClass="content-section">
        <Label styleClass="section-title" text="Edge Cases"/>
        <FormattedTextFlow styleClass="text-content" fx:id="edgeCasesFlow"/>
      </VBox>
      <FormattedTextFlow styleClass="code-block" fx:id="solutionCodeFlow"/>
      <VBox styleClass="content-section">
        <Label styleClass="section-title" text="Time Complexity"/>
        <FormattedTextFlow styleClass="text-content" fx:id="timeComplexityFlow"/>
      </VBox>
      <VBox styleClass="content-section">
        <Label styleClass="section-title" text="Space Complexity"/>
        <FormattedTextFlow styleClass="text-content" fx:id="spaceComplexityFlow"/>
      </VBox>
      <VBox styleClass="content-section">
        <Button onAction="#toggleProblemStatement" styleClass="content-toggle-button"
          text="Show Problem" fx:id="toggleProblemStatementButton"/>
        <VBox managed="false" styleClass="content-section"
          visible="false" fx:id="problemStatementSection">
          <Label styleClass="section-title" text="Problem Statement"/>
          <FormattedTextFlow styleClass="text-content" fx:id="problemStatementFlow"/>
        </VBox>
      </VBox>
    </VBox>
  </ScrollPane>
</VBox>
